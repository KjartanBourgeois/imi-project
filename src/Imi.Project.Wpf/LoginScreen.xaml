<Window x:Class="Imi.Project.Wpf.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Imi.Project.Wpf"
        mc:Ignorable="d"
        Title="LoginScreen" Height="450" Width="800" Background="SteelBlue">
    <Grid>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Center" Margin="0,282,0,0" VerticalAlignment="Top" Width="236" Height="32" Click="btnLogin_Click" />
        <TextBox x:Name="txtEmail" HorizontalAlignment="Center" Margin="0,169,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="236" Height="30" />
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Center" Margin="0,238,0,0" VerticalAlignment="Top" Width="236" Height="30" />
        <Label FontWeight="Bold" Content="Email" HorizontalAlignment="Center" Margin="0,143,0,0" VerticalAlignment="Top" Width="236" />
        <Label FontWeight="Bold" Content="Wachtwoord" HorizontalAlignment="Center" VerticalAlignment="Top" Width="236" Margin="0,212,0,0" />
    </Grid>
</Window>